<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="10 seconds">
    <timestamp key="byDay" datePattern="yyyyMMdd" />
    <jmxConfigurator />

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Encoding>GBK</Encoding>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level %-10thread %-30.30logger{0} - %msg%n</pattern>
        </layout>
    </appender>

    <appender name="httpclient-file" class="ch.qos.logback.core.FileAppender">
        <file>/log/httpclient.log.${byDay}</file>
        <append>true</append>
        <encoder>
            <pattern>%date %-5level %-10thread %-30logger{0} - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="com.letv.cdn">
        <level value="INFO" />
    </logger>
    <logger name="org.springframework">
        <level value="INFO" />
    </logger>

    <logger name="com.letv.cdn.common.web.HttpClientUtil">
        <level value="INFO" />
        <appender-ref ref="httpclient-file" />
    </logger>
     <logger name="java.sql">
        <level value="DEBUG" />
    </logger> 
    <logger name="org.springframework.web.client.RestTemplate">
        <level value="DEBUG" />
    </logger> 
    <root>
        <level value="INFO" />
        <appender-ref ref="stdout" />
    </root>
</configuration>

